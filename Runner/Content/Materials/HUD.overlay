 	

// The name of the overlay comes first
HUD/Score
{
    zorder 200
	metrics_mode pixels
	
    container Panel(HUD/Score/Panel)
    {
      metrics_mode relative

      left 0.05
      top 0.9
      width 0.45
      height 0.1
		
		element TextArea(HUD/ScorePanel/Score)
		{
		metrics_mode relative
		
         left 0.1
         font_name Big
         char_height 0.05
         colour 1 1 1
         caption Score: 0
		}
    }
}


